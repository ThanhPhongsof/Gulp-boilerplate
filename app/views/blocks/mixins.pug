mixin menuLink(title, href ="#")
	li.header-menu-item
		a.header-menu-link(href=href)= title

mixin headerBottomItem(number,title)
		.header-bottom-item
			span.header-bottom-number=number
			span.header-bottom-text=title


mixin blockBox(caption,title,desc)
	.block-box
		h3.block-box-caption=caption
		h2.block-box-heading=title
		if desc
			p.block-box-desc=desc

mixin aboutImage(image, iconClass,title = "Supper Team", alt = "")
	.about-item 
		img.about-image(src=image, alt = "")
		.about-content
			i.about-icon(class=iconClass)
			span.about-title=title

mixin numberItem(count, text)
	.number-item
		h4.number-item-count=count
		span.number-item-text=text

mixin serviceItem(image, title, desc)
	.service-item
		img.service-item-icon(src=image)
		.service-item-info
			h3.service-item-title=title
			p.service-item-desc=desc

mixin wedoItem(image,title,classIcon,text,classActive="")
	.wedo-item(class=classActive)
		.wedo-item-header
			img(src=image).wedo-item-icon
			h3.wedo-item-title=title
			i.wedo-item-arrow(class=classIcon)
		.wedo-item-content
			.wedo-item-text=text

mixin teamSocial(facebook = "#",twitter ="#",pinterest = "#",instagram = "#")
	ul.team-social
		li.team-social-item
			a.team-social-link(href=facebook)
				i.fab.fa-facebook-f
		li.team-social-item
			a.team-social-link(href=twitter)
				i.fab.fa-twitter
		li.team-social-item
			a.team-social-link(href=pinterest)
				i.fab.fa-pinterest-p
		li.team-social-item
			a.team-social-link(href=instagram)
				i.fab.fa-instagram

mixin teamItem(image, teamName, teamPosition)
	.team-item
		.team-main
			img(src=image, alt="").team-image
			.team-content
				if block
					block
		.team-info
			h3.team-name=teamName
			span.team-position=teamPosition

mixin workItem(image,classItemFull="",title="Creatively designed",desc="Lorem ipsum dolor sit amet consectetur adipisicing elit")
	.work-item(class=classItemFull)
		img.work-image(src=image)
		.work-content
			i.fa.fa-home.work-icon
			h3.work-title=title
			span.work-desc.text.text--light=desc

mixin peopleItem(image, name="Mattthew dix",position="Graphic Design",desc="Lorem, ipsum dolor sit amet consectetur adipisicing elit. Eos saepe dolore inventore sapiente soluta iste praesentium repudiandae quod, quas minus quaerat? Tempora inventore quaerat numquam unde expedita debitis, facere laborum!")
	li.people-item
		img.people-avatar(src=image)
		.people-info
			h3.people-name=name
			span.people-position.text.text--light=position
			p.people-desc=desc			
mixin menuLink(title, href ="#")
	li.header-menu-item
		a.header-menu-link(href=href)= title

mixin headerBottomItem(number,title)
		.header-bottom-item
			span.header-bottom-number=number
			span.header-bottom-text=title


mixin blockBox(caption,title,desc)
	.block-box
		h3.block-box-caption=caption
		h2.block-box-heading=title
		if desc
			p.block-box-desc=desc

mixin aboutImage(image, iconClass,title = "Supper Team", alt = "")
	.about-item 
		img.about-image(src=image, alt = "")
		.about-content
			i.about-icon(class=iconClass)
			span.about-title=title

mixin numberItem(count, text)
	.number-item
		h4.number-item-count=count
		span.number-item-text=text

mixin serviceItem(image, title, desc)
	.service-item
		img.service-item-icon(src=image)
		.service-item-info
			h3.service-item-title=title
			p.service-item-desc=desc

mixin wedoItem(image,title,classIcon,text,classActive="")
	.wedo-item(class=classActive)
		.wedo-item-header
			img(src=image).wedo-item-icon
			h3.wedo-item-title=title
			i.wedo-item-arrow(class=classIcon)
		.wedo-item-content
			.wedo-item-text=text